{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES5",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "html",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "strict": true,
    "strictFunctionTypes": false,
    "allowJs": true,
    "lib": ["ES6", "ES5", "DOM"]    
  },
  "exclude": ["node_modules", "build"]
}
